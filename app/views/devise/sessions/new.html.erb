<div class="session-header">
  <div class="back">
    <%= link_to root_path do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
  </div>
  <h2>LOGIN</h2>
  <div></div>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>


  <div class="session-field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "session-field-input" %>
  </div>

  <div class="session-field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "session-field-input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="session-field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="txtactions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

